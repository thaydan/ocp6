<div class="tab-pane fade {{ tabs.gallery.active }}" id="pills-gallery" role="tabpanel"
     aria-labelledby="pills-home-tab">
    <!-- Medias Image -->
    <h3>Images</h3>
    <div class="row" id="portfolio">
        {% for image in trick.images %}
            <div class="col-lg-3 col-sm-4 mb-4">
                <!-- Portfolio item 1-->
                <div class="portfolio-item">
                    <a class="portfolio-link" data-bs-toggle="modal" href="#imageModal{{ image.id }}">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fas fa-eye fa-3x"></i></div>
                        </div>
                        <img class="img-fluid" src="{{ image(image) }}"
                             alt="{{ image.title }}"/>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
    <!-- Medias Video -->
    <h3>Vid√©os</h3>
    <div class="row">
        {% for video in trick.videos %}
            <div class="col col-3">
                {% if video.platformDomain == 'youtube.com' %}
                    <iframe src="https://www.youtube.com/embed/{{ video.platformVideoId }}"
                            title="{{ video.title|capitalize }}" class="video-player"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                {% elseif video.platformDomain == 'dailymotion.com' %}
                    <div style="position:relative;padding-bottom:56.25%;height:0;overflow:hidden;">
                        <iframe style="width:100%;height:100%;position:absolute;left:0px;top:0px;overflow:hidden"
                                type="text/html" src="https://www.dailymotion.com/embed/video/x86739p"
                                width="100%" height="100%" allowfullscreen></iframe>
                    </div>
                {% elseif video.platformDomain == 'vimeo.com' %}
                    <div style="padding:56.25% 0 0 0;position:relative;">
                        <iframe src="https://player.vimeo.com/video/278113396?h=a07dd7b25f&byline=0"
                                style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0"
                                allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>

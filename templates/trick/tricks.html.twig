{% extends 'base.html.twig' %}

{% block title %}Tricks{% endblock %}

{% block body %}
    <section class="page-section bg-light" id="tricks">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Tricks</h2>
                <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            </div>
            <div class="row">
                {% for trick in tricks %}
                <div class="col-lg-4 col-sm-6 mb-4">
                    <div class="trick-item">
                        <a class="trick-link" href="{{ path('trick', {'slug':trick.slug}) }}">
                            <div class="trick-hover">
                                <div class="trick-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="/assets/img/portfolio/{{ trick.id }}.jpg" alt="..."/>
                        </a>
                        <div class="trick-caption">
                            <div class="trick-caption-heading">{{ trick.title }}</div>
                            <div class="trick-caption-subheading text-muted">{{ trick.description }}</div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
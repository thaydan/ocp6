<div class="tab-pane fade {{ tabs.informations.active }}" id="pills-informations" role="tabpanel" aria-labelledby="pills-profile-tab">
    <div class="text-center">
        <p><i>{{ trick.description }}</i></p>

    </div>
    <div class="row text-center">
        <p>Groupes : {{ trick.group }}</p>
    </div>
    <div class="row text-center">
        <p>Crée le {{ trick.createdAt | date('d/m/Y') }} à {{ trick.createdAt | date('H:i') }}<br>
            Mis à jour le {{ trick.updatedAt | date('d/m/Y') }} à {{ trick.updatedAt | date('H:i') }}</p>
    </div>
    <a href="{{ path('trick_edit', {'slug':trick.slug}) }}"
       class="btn btn-primary mx-auto d-block w-25">Editer le Trick</a>
</div>